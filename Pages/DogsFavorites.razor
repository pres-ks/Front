@code {
    private List<DogFavorite>? favorites;
    private DogFavorite newDog = new();
    private bool showModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadFavorites();
    }

    private async Task LoadFavorites()
    {
        favorites = await Http.GetFromJsonAsync<List<DogFavorite>>("api/dogs");
    }

    private void ShowCreateModal()
    {
        newDog = new DogFavorite();
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task CreateFavorite()
    {
        var response = await Http.PostAsJsonAsync("api/dogs", newDog);
        if (response.IsSuccessStatusCode)
        {
            await LoadFavorites();
            CloseModal();
        }
    }

    private async Task DeleteFavorite(int id)
    {
        var response = await Http.DeleteAsync($"api/dogs/{id}");
        if (response.IsSuccessStatusCode)
        {
            await LoadFavorites();
        }
    }
}
