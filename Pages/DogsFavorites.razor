@page "/favorites"
@inject HttpClient Http
@using ConsumoAPI2.Wasm.Models

<PageTitle>Mis Perros Favoritos</PageTitle>

<div class="container mt-4 animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="text-primary fw-bold mb-0">üêï Mis Perros Favoritos</h1>
            <p class="text-muted">Gestiona tu colecci√≥n personal de razas</p>
        </div>
        <button class="btn btn-success btn-lg shadow-sm d-flex align-items-center gap-2" @onclick="ShowCreateModal">
            <i class="bi bi-plus-circle-fill"></i> <span>Agregar Nuevo</span>
        </button>
    </div>

    @if (favorites == null)
    {
        <div class="d-flex justify-content-center mt-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (!favorites.Any())
    {
        <div class="text-center mt-5 animate-fade-in delay-100">
            <div class="mb-4 text-muted opacity-50">
                <i class="bi bi-heart-break display-1"></i>
            </div>
            <h3 class="fw-bold text-muted">¬°A√∫n no tienes favoritos!</h3>
            <p class="text-muted mb-4">Comienza agregando algunas razas interesantes a tu lista.</p>
            <button class="btn btn-primary" @onclick="ShowCreateModal">
                Agregar mi primer favorito
            </button>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var dog in favorites)
            {
                <div class="col animate-fade-in">
                    <div class="card h-100 glass-panel border-0 hover-card overflow-hidden">
                        <div class="card-img-top-wrapper position-relative" style="height: 250px; overflow: hidden;">
                            <img src="@(string.IsNullOrEmpty(dog.ImageUrl) ? "/images/placeholder-dog.jpg" : dog.ImageUrl)" 
                                 class="card-img-top h-100 w-100 object-fit-cover transition-transform" 
                                 alt="@dog.Name" 
                                 onerror="this.src='https://placehold.co/600x400?text=No+Image'">
                            <div class="card-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center opacity-0 transition-opacity bg-dark bg-opacity-50">
                                <span class="badge bg-light text-dark fs-5">Ver Detalles</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-dark mb-1">@dog.Name</h5>
                            <p class="card-text text-muted small mb-3">
                                <i class="bi bi-geo-alt-fill text-danger me-1"></i> @(string.IsNullOrEmpty(dog.Origin) ? "Origen desconocido" : dog.Origin)
                            </p>
                            <div class="d-flex flex-wrap gap-2">
                                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25">
                                    @dog.BreedGroup
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 d-flex justify-content-end pb-3 pt-0">
                            <button class="btn btn-outline-danger btn-sm rounded-circle p-2 d-flex align-items-center justify-content-center" 
                                    style="width: 38px; height: 38px;"
                                    title="Eliminar de favoritos"
                                    @onclick="() => DeleteFavorite(dog.Id)">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.6); backdrop-filter: blur(5px);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg glass-panel">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold text-primary">Agregar Nuevo Favorito</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted text-uppercase">Nombre</label>
                        <input @bind="newDog.Name" class="form-control form-control-lg bg-light border-0" placeholder="Ej. Firulais" />
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted text-uppercase">Raza / Grupo</label>
                            <input @bind="newDog.BreedGroup" class="form-control bg-light border-0" placeholder="Ej. Pastor" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted text-uppercase">Origen</label>
                            <input @bind="newDog.Origin" class="form-control bg-light border-0" placeholder="Ej. Alemania" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted text-uppercase">URL de Imagen</label>
                        <input @bind="newDog.ImageUrl" class="form-control bg-light border-0" placeholder="https://..." />
                        @if (!string.IsNullOrEmpty(newDog.ImageUrl))
                        {
                            <div class="mt-2 rounded overflow-hidden" style="height: 100px;">
                                <img src="@newDog.ImageUrl" class="w-100 h-100 object-fit-cover" alt="Preview" onerror="this.style.display='none'"/>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-light text-muted fw-bold" @onclick="CloseModal">Cancelar</button>
                    <button type="button" class="btn btn-primary px-4" @onclick="CreateFavorite">Guardar Favorito</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
    }
    .hover-card:hover .card-overlay {
        opacity: 1 !important;
    }
    .hover-card:hover .card-img-top {
        transform: scale(1.05);
    }
    .transition-transform {
        transition: transform 0.5s ease;
    }
    .transition-opacity {
        transition: opacity 0.3s ease;
    }
    .object-fit-cover {
        object-fit: cover;
    }
</style>

